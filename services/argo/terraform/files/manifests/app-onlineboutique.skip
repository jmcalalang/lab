apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: "onlineboutique"
  namespace: argocd
spec:
  destination:
    name: ""
    namespace: calalang-net
    server: "https://kubernetes.default.svc"
  source:
    path: ""
    repoURL: us-docker.pkg.dev/online-boutique-ci/charts
    targetRevision: 0.5.2
    chart: onlineboutique
    helm:
      valueFiles: []
      parameters:
        - name: frontend.externalService
          value: "false"
  sources: []
  project: default
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - CreateNamespace=true
